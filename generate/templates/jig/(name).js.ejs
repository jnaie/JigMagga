steal('core/control', function () {
    "use strict";

    /**
     * @class <%= name %>
     */
    can.Control.extend('<%= Namespace %>.Jig.<%= Name %>',
    /** @Static */
        {
            defaults : {
                template: "//<%= namespace %>/jig/<%= name %>/views/init.mustache"
            }
        },
        /** @Prototype */
        {
            init : function () {
                var self = this;
                this.element.html(can.view(self.options.template));
            }
        });
});